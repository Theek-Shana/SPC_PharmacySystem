@page
@model SPCMain.Pages.SendOrdersModel
@{
    ViewData["Title"] = "Send Drug Orders";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<form method="post" class="order-form">
    <div class="form-group">
        <label for="Name">Drug Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.drug?.Name" required />
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" required>@Model.drug?.Description</textarea>
    </div>

    <div class="form-group">
        <label for="Quantity">Quantity</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" value="@Model.drug?.Quantity" required />
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="number" step="0.01" class="form-control" id="Price" name="Price" value="@Model.drug?.Price" required />
    </div>

    <button type="submit" class="btn btn-primary btn-block">Send Order</button>
</form>

@if (Model.drug != null)
{
    <p class="mt-4">Drug Information Submitted:</p>
    <ul class="list-group">
        <li class="list-group-item">Drug Name: @Model.drug.Name</li>
        <li class="list-group-item">Description: @Model.drug.Description</li>
        <li class="list-group-item">Quantity: @Model.drug.Quantity</li>
        <li class="list-group-item">Price: @Model.drug.Price</li>
    </ul>
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin-top: 50px;
    }

    .order-form {
        background-color: white;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: auto;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border-radius: 5px;
        padding: 12px;
        font-size: 1rem;
    }

    .btn-block {
        width: 100%;
    }

    .list-group-item {
        padding: 10px 15px;
    }

    .list-group {
        margin-top: 20px;
    }

    h2 {
        color: #007bff;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    button:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }
</style>
