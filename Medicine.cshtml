@page
@model SPCMain.Pages.MedicineModel
@{
    ViewData["Title"] = "Medicine Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medicine Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 20px auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            color: #333;
        }

        .btn {
            display: inline-block;
            padding: 10px 15px;
            background: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-bottom: 15px;
        }

            .btn:hover {
                background: #218838;
            }

        .btn-warning {
            background: #ffc107;
            color: black;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
        }

            .btn-warning:hover {
                background: #e0a800;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: white;
            border-radius: 5px;
            overflow: hidden;
        }

        table, th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background: #007bff;
            color: white;
            font-weight: bold;
        }

        tbody tr:nth-child(even) {
            background: #f9f9f9;
        }

        tbody tr:hover {
            background: #f1f1f1;
            transition: 0.3s ease;
        }

    </style>
</head>
<body>
    <div id="medicineContainer" class="container">
        <h2>Medicine Details</h2>

        <!-- Low Stock Notification -->
        @if (Model.lowStockMedicines.Count > 0)
        {
            <div style="background: #ffcc00; color: black; padding: 10px; margin-bottom: 15px; border-radius: 5px;">
                <strong>Warning:</strong> Some medicines are low in stock!
                <ul>
                    @foreach (var med in Model.lowStockMedicines)
                    {
                        <li>@med.Name - Only @med.Quantity left</li>
                    }
                </ul>
            </div>
        }

        

        <table>
            <thead>
                <tr>
                    <th>Medicine ID</th>
                    <th>Medicine Name</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var medicine in Model.medicines)
                {
                    <tr style="@(medicine.Quantity < 5 ? "background-color: #ffcccc;" : "")">
                        <td>@medicine.Id</td>
                        <td>@medicine.Name</td>
                        <td>@medicine.Description</td>
                        <td>@medicine.Quantity</td>
                        <td>@medicine.Price</td>
                        <td>
                            <a asp-page="AddNewTender" asp-route-id="@medicine.Id" class="btn btn-warning">Post a Tender</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
