@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="welcome-container">
    <img src="/images/bg.webp" alt="Welcome to SPC Web Portal" class="welcome-image">

    <h1 class="welcome-title">Welcome to SPC Web Portal</h1>
    <p class="welcome-text">Your one-stop solution for managing suppliers efficiently.</p>

    <div class="button-group">
        <a href="/Login" class="btn btn-primary">Login</a>
        <a href="/Register" class="btn btn-secondary">Register</a>

    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background: url("/images/bgweb.jpg") no-repeat center center fixed;
        background-size: cover;
        color: #333;
        text-align: center; /* Center the welcome text */
    }

    /* Centering the container */
    .welcome-container {
        text-align: center;
        margin: 50px auto;
        max-width: 900px;
        padding: 20px;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        border-radius: 10px;
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        opacity: 0;
        transform: translateY(-20px);
        transition: opacity 1s ease-in-out, transform 1s ease-in-out;
    }

        /* Fade-in effect on load */
        .welcome-container.loaded {
            opacity: 1;
            transform: translateY(0);
        }

    /* Styling the image */
    .welcome-image {
        width: 100%;
        max-width: 600px;
        border-radius: 15px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        /* Image hover effect */
        .welcome-image:hover {
            transform: scale(1.05);
            box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.4);
        }

    /* Title and text styles */
    .welcome-title {
        font-size: 40px;
        font-weight: bold;
        color: #333;
        margin-top: 20px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    }

    .welcome-text {
        font-size: 20px;
        color: #555;
        margin-bottom: 30px;
    }

    /* Button styles */
    .button-group {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 25px;
    }

    .btn {
        padding: 12px 25px;
        font-size: 18px;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        transition: all 0.3s ease-in-out;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        box-shadow: 0px 3px 10px rgba(0, 123, 255, 0.3);
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-3px);
            box-shadow: 0px 5px 15px rgba(0, 123, 255, 0.5);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        box-shadow: 0px 3px 10px rgba(108, 117, 125, 0.3);
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-3px);
            box-shadow: 0px 5px 15px rgba(108, 117, 125, 0.5);
        }
</style>

<script>
    // Apply the fade-in effect once the page loads
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelector(".welcome-container").classList.add("loaded");
    });
</script>
