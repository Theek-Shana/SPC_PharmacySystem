@page
@model SPCPublicWeb.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <h2>Supplier Login</h2>

    <form method="post" class="login-form">
        <div class="form-group">
            <label>Email</label>
            <input type="email" asp-for="Supplier.SupplierEmail" required class="form-control">

            <label>Password</label>
            <input type="password" name="password" required class="form-control">
        </div>

        
   


       

        <div class="form-group button-group">
            <input type="submit" name="submit" value="Login" class="btn btn-primary">
            <a href="/Register" class="btn btn-secondary">Register</a>
        </div>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="error-message">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors).Take(1))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

</div>

<style>
    .login-container {
        width: 350px;
        margin: 50px auto;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    h2 {
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 14px;
    }

    .button-group {
        display: flex;
        justify-content: space-between;
    }

    .btn {
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
    }

    .btn-primary {
        background: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background: #0056b3;
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
        text-decoration: none;
        display: inline-block;
        padding: 8px 15px;
        border-radius: 5px;
    }

    .btn-secondary:hover {
        background: #5a6268;
    }

    .error-message {
        color: red;
        margin-top: 10px;
        font-size: 14px;
    }
</style>
